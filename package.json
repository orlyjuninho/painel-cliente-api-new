{
  "name": "painel-cliente-api",
  "version": "1.0.0",
  "description": "API do Painel Cliente",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json && cp -r src/static dist/ && cp -r src/uploads dist/ && cp -r src/models dist/ && cp -r src/routes dist/ && cp -r src/services dist/ && cp -r src/utils dist/",
    "start": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "tsc": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.10.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.51",
    "@types/express": "^4.17.22",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 